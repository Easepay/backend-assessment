{
  "name": "easepay",
  "version": "0.1.2",
  "description": "easepay's identity and access management system",
  "author": "adeoye adefemi <adefemiadeoye@yahoo.com>",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "typeorm": "typeorm-ts-node-commonjs",
    "typeorm:run-migrations": "npm run typeorm migration:run -- -d src/config/typeorm.config.ts",
    "typeorm:generate-migration": "npm run typeorm -- -d ./src/config/typeorm.config.ts migration:generate ./src/migrations/$npm_config_name",
    "typeorm:create-migration": "npm run typeorm -- migration:create ./src/migrations/$npm_config_name",
    "typeorm:revert-migration": "npm run typeorm -- -d ./src/config/typeorm.config.ts migration:revert",
    "proto:generate": " protoc --plugin=./node_modules/.bin/protoc-gen-ts_proto --ts_proto_out=.  ./src/proto/*.proto --ts_proto_opt=fileSuffix=.pb  --ts_proto_opt=nestJs=true --experimental_allow_proto3_optional=true",
    "proto:watch": "chokidar \"**/*.proto\" -c \"npm run proto:generate\""
  },
  "dependencies": {
    "@casl/ability": "^6.5.0",
    "@grpc/grpc-js": "^1.9.2",
    "@grpc/proto-loader": "^0.7.9",
    "@nestjs/bull": "^0.6.3",
    "@nestjs/common": "^9.0.0",
    "@nestjs/config": "^2.3.1",
    "@nestjs/core": "^9.0.0",
    "@nestjs/jwt": "^10.0.3",
    "@nestjs/mapped-types": "*",
    "@nestjs/microservices": "^9.4.3",
    "@nestjs/passport": "^9.0.3",
    "@nestjs/platform-express": "^9.0.0",
    "@nestjs/typeorm": "^9.0.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "compression": "^1.7.4",
    "helmet": "^7.0.0",
    "nestjs-pino": "^3.5.0",
    "otp-generators": "^1.0.3",
    "owasp-password-strength-test": "^1.3.0",
    "pino-http": "^8.5.1",
    "pino-pretty": "^10.2.3",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.2.0",
    "ts-protoc-gen": "^0.15.0",
    "typeorm": "^0.3.20",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.0.2",
    "@golevelup/ts-jest": "^0.3.7",
    "@nestjs/cli": "^9.0.0",
    "@nestjs/schematics": "^9.0.0",
    "@nestjs/testing": "^9.0.0",
    "@types/bcrypt": "^5.0.0",
    "@types/bull": "^4.10.0",
    "@types/compression": "^1.7.4",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.13",
    "@types/jest": "^29.2.4",
    "@types/jsonwebtoken": "^9.0.1",
    "@types/node": "18.11.18",
    "@types/otp-generator": "^4.0.0",
    "@types/owasp-password-strength-test": "^1.3.0",
    "@types/passport-local": "^1.0.35",
    "@types/speakeasy": "^2.0.7",
    "@types/supertest": "^2.0.11",
    "@types/uuid": "^9.0.1",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "chokidar-cli": "^3.0.0",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "29.3.1",
    "prettier": "^2.3.2",
    "source-map-support": "^0.5.20",
    "supertest": "^6.1.3",
    "ts-jest": "29.0.3",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.0.0",
    "ts-proto": "^1.157.0",
    "tsconfig-paths": "4.1.1",
    "typescript": "^4.7.4"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
